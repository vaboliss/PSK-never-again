@page
@model ChangeRoleModel
@{
    ViewData["Title"] = "Manage Role";
    ViewData["ActivePage"] = ManageNavPages.ChangeRole;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-3">
        <partial name="_ManageNav" />
    </div>
    <div class="col-md-1">
    </div>
    <div class="col-md-6">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.CurrentRole"></label>
                <input asp-for="Input.CurrentRole" class="form-control" disabled />
            </div>
            <select class="form-control" name="Role">
                <option value="">Select a Role</option>
                <option value="Worker">Employee</option>
                <option value="Manager">Manager</option>
            </select>
            <button id="change-role-button" type="submit" asp-page-handler="ChangeRole" class="btn btn-primary mt-2">Change Role</button>
        </form>
    </div>
    <div class="col-md-2">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
