@model EducationSystem.Models.Worker

@{
    ViewData["Title"] = "Details";
}

<h4>Employee details</h4>

<div>
    <h4>Worker</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            First name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Last name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
    </dl>
</div>
@{
var topicsList = ViewBag.WorkerGoals as ICollection<Topic>;
foreach (var item in topicsList)
{
    <tr>
        <td>
            @item.Name;
        </td>
        <td>
            @item.Description;
        </td>
    </tr>
}
}
<div>
    <form asp-action="AssignGoal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label"></label>
            <select class="form-control" asp-items="ViewBag.TopicsToAssign" name="TopicId"></select>
        </div>
        <div class="form-group">
            <input asp-action="AssignGoal" asp-route-id="@Model.Id" type="submit" value="Assign goal" class="btn btn-primary" />
        </div>
    </form>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
